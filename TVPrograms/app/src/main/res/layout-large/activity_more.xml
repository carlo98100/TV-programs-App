<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="29dp"
            android:text="Reality:"
            android:textAllCaps="false"
            android:textColor="#ff00"
            android:textSize="30sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="86dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/svtPlayTabletImageBtn"
                    android:onClick="DPlayFunction"
                    app:srcCompat="@drawable/dplaytablet" />

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/twitchTabletImageBtn"
                    android:onClick="ViaplayFunction"
                    app:srcCompat="@drawable/viaplaytablet" />

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/TabletImageBtn"
                    android:onClick="SvtPlayFunction"
                    app:srcCompat="@drawable/svtplaytablet" />

                <ImageButton
                    android:id="@+id/imageButton11"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/TabletImageBtn"
                    android:onClick="Tv4PlayFunction"
                    app:srcCompat="@drawable/tv4tablet" />

                <ImageButton
                    android:id="@+id/imageButton12"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/TabletImageBtn"
                    app:srcCompat="@drawable/viafreetablet" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="312dp"
            android:text="Entertainment:"
            android:textAllCaps="false"
            android:textColor="#ff00"
            android:textSize="30sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="367dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton13"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/svtPlayTabletImageBtn"
                    android:onClick="NetflixFunction"
                    app:srcCompat="@drawable/netflixtablet" />

                <ImageButton
                    android:id="@+id/imageButton14"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/twitchTabletImageBtn"
                    android:onClick="YoutubeFunction"
                    app:srcCompat="@drawable/youtubetablet" />

                <ImageButton
                    android:id="@+id/imageButton15"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/TabletImageBtn"
                    android:onClick="TwitchFunction"
                    app:srcCompat="@drawable/twitchtablet" />

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>