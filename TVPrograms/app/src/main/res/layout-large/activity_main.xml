<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignStart="@+id/imageButton5"
            android:layout_alignTop="@+id/imageButton6"
            app:srcCompat="@drawable/tv4tablet"
            tools:layout_editor_absoluteX="474dp"
            tools:layout_editor_absoluteY="403dp" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageButton4"
            android:layout_marginTop="379dp"
            app:srcCompat="@drawable/viafreetablet"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="403dp" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="157dp"
            android:layout_marginTop="116dp"
            app:srcCompat="@drawable/youtubetablet"
            tools:layout_editor_absoluteX="474dp"
            tools:layout_editor_absoluteY="108dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="157dp"
            android:layout_marginTop="116dp"
            app:srcCompat="@drawable/netflixtablet"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="108dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="122dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="220dp"
            android:background="@drawable/round_corners"
            android:onClick="OpenGame"
            android:text="Categories"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="73dp"
            android:layout_marginStart="50dp"
            android:onClick="Speak"
            app:srcCompat="@drawable/microphonetablet" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>